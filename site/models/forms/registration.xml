<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fields
			name="registration">
		<fieldset
				name="registration">
			<field
					name="firstName"
					type="text"
					required="true"
					label="COM_REGISTRATION_FIRSTNAME_LABEL"
					description="COM_REGISTRATION_FIRSTNAME_DESC" />
			<field
					name="lastName"
					type="text"
					required="true"
					label="COM_REGISTRATION_LASTNAME_LABEL"
					description="COM_REGISTRATION_LASTNAME_DESC" />
			<field
					name="email"
					type="email"
					label="JGLOBAL_EMAIL"
					description="COM_ADMIN_USER_FIELD_EMAIL_DESC"
					required="true"
					size="30"
					class="inputbox"
					validate="email" />
			<field
					name="company"
					type="text"
					required="true"
					default=""
					label="COM_REGISTRATION_COMPANY_LABEL"
					description="COM_REGISTRATION_COMPANY_LABEL"
					size="10" />
			<field
					name="country"
					type="text"
					required="true"
					default=""
					label="COM_REGISTRATION_COUNTRY_LABEL"
					description="COM_REGISTRATION_COUNTRY_LABEL"
					size="10" />
			<field
					name="address"
					type="text"
					required="true"
					default=""
					label="COM_REGISTRATION_ADDRESS_LABEL"
					description="COM_REGISTRATION_ADDRESS_DESC"
					size="10" />
			<field
					name="productType"
					type="text"
					required="true"
					default=""
					label="COM_REGISTRATION_PRODUCT_TYPE_LABEL"
					description="COM_REGISTRATION_PRODUCT_TYPE_DESC"
					size="10" />
			<field
					name="serialNumber"
					type="text"
					required="true"
					default=""
					label="COM_REGISTRATION_SERIAL_NUMBER_LABEL"
					description="COM_REGISTRATION_SERIAL_NUMBER_DESC"
					size="10" />
			<field
					name="purchasedFrom"
					type="text"
					required="true"
					default=""
					label="COM_REGISTRATION_PURCHASED_FROM_LABEL"
					description="COM_REGISTRATION_PURCHASED_FROM_DESC"
					size="10" />
			<field
					name="purchaseDate"
					type="calendar"
					default="NOW"
					required="true"
					label="COM_REGISTRATION_PURCHASED_DATE_LABEL"
					description="COM_REGISTRATION_PURCHASED_DATE_DESC" />
		</fieldset>
	</fields>
</form>